<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="16dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".TenthActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="135dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/selector_bg"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/new_book_img"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/todo"
        android:scaleType="centerCrop"
        android:src="@drawable/javabook"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053"
        app:layout_editor_absoluteX="46dp"
        app:layout_editor_absoluteY="40dp" />

    <TextView
        android:id="@+id/java_book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="@string/the_java_virtual_machine_specification"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/new_book_img"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/author_txt"
        android:layout_width="170dp"
        android:layout_height="19dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/author"
        app:layout_constraintStart_toEndOf="@+id/new_book_img"
        app:layout_constraintTop_toBottomOf="@+id/java_book_title" />

    <RatingBar
        android:id="@+id/java_book_ratingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/new_book_img"
        app:layout_constraintTop_toBottomOf="@+id/author_txt" />

    <TextView
        android:id="@+id/java_book"
        android:layout_width="36dp"
        android:layout_height="57dp"
        android:layout_marginStart="8dp"
        android:text="@string/buying"
        app:layout_constraintBottom_toBottomOf="@+id/java_book_ratingBar"
        app:layout_constraintStart_toEndOf="@+id/java_book_ratingBar"
        app:layout_constraintTop_toTopOf="@+id/java_book_ratingBar" />

    <TextView
        android:id="@+id/java_book_page_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/page_view"
        app:layout_constraintStart_toEndOf="@+id/new_book_img"
        app:layout_constraintTop_toBottomOf="@+id/java_book_ratingBar" />

    <ImageView
        android:id="@+id/fav_img"
        android:layout_width="33dp"
        android:layout_height="20dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="28dp"
        android:contentDescription="@string/todo"
        android:tint="@color/fav_icon_tint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:srcCompat="@drawable/favourite_off"
        tools:ignore="VectorDrawableCompat" />

</androidx.constraintlayout.widget.ConstraintLayout>